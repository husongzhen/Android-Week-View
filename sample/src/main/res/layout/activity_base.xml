<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".BaseActivity">

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dayBackgroundColor="#ffffffff"
        app:eventTextColor="@android:color/black"
        app:headerColumnBackground="#ffffffff"
        app:headerColumnPadding="1dp"
        app:headerColumnTextColor="@color/toolbar_text"
        app:headerRowBackgroundColor="#ffffffff"
        app:headerRowPadding="12dp"
        app:nowLineColor="@color/event_color_01"
        app:hourHeight="56dp"
        app:weekTextSize="16sp"
        app:nowLineThickness="1dp"
        app:allDayHeight="20dp"
        app:allDayEventHeight="60dp"
        app:noOfVisibleDays="3"
        app:mCreateEventColor="@color/accent"
        app:textSize="12sp"
        app:eventFinishTextColor="#A3A3A3"
        app:todayBackgroundColor="#1848adff"
        app:todayHeaderTextColor="@color/accent" />


    <com.alamkanak.weekview.view.DragScaleView
        android:id="@+id/drag"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:clickable="true"
        android:visibility="gone"
        app:eventTextColor="@android:color/white"
        app:textSize="12sp" />


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
